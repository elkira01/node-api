{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strictPropertyInitialization": false,
        "paths": {
            "@shared/*": ["./src/shared/*"],
            "@core/*": ["./src/core/*"],
            "@infrastructure/*": ["./src/infrastructure/*"]
        }

    },
    "include": ["src/**/*"]
}
