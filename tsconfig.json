{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@ui/*": ["./src/user-interface/*"],
            "@app/*": ["./src/kernel/*"],
            "@infra/*": ["./src/infrastructure/*"],
            "@shared/*": ["./src/shared-kernel/*"]
        },
    },
    "include": ["src/**/*"]
}
